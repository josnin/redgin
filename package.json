{
  "name": "redgin",
  "version": "0.1.7",
  "description": "Simplified library for building web components",
  "keywords": [
    "redgin",
    "web components",
    "custom elements"
  ],
  "main": "dist/redgin.min.js",
  "types": "dist/redgin.d.ts",
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -w",
    "bundle": "npx esbuild --bundle src/redgin.js --minify --sourcemap --format=esm --outfile=dist/redgin.min.js --target=es2022",
    "bundle_ts": "npx esbuild --bundle src/redgin.ts --minify --sourcemap --outfile=dist/redgin.min.ts",
    "dev": "node node_modules/vite/bin/vite.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/josnin/redgin.git"
  },
  "author": "josnin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/josnin/redgin/issues"
  },
  "homepage": "https://github.com/josnin/redgin#readme",
  "dependencies": {
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  },
  "devDependencies": {
    "@types/node": "^18.11.14",
    "codelyzer": "^6.0.2",
    "esbuild": "^0.16.4",
    "typescript": "^4.9.4"
  }
}
